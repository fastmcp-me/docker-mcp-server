{
  "name": "docker-mcp-server",
  "version": "1.0.0",
  "description": "Model Context Protocol (MCP) server for Docker container execution with AI assistants",
  "main": "dist/index.js",
  "bin": {
    "docker-mcp-server": "dist/index.js"
  },
  "type": "module",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "docker",
    "ai",
    "claude",
    "assistant",
    "container",
    "development"
  ],
  "author": "Kenneth Bergquist <bergquist.kenneth@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kenforthewin/docker-mcp-server.git"
  },
  "homepage": "https://github.com/kenforthewin/docker-mcp-server#readme",
  "bugs": {
    "url": "https://github.com/kenforthewin/docker-mcp-server/issues"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "CLAUDE.md"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:custom": "node dist/index.js --container-name",
    "dev": "tsc && node dist/index.js",
    "dev:custom": "tsc && node dist/index.js --container-name",
    "prepublishOnly": "npm run build",
    "postinstall": "echo '\n🐳 Docker MCP Server installed! Run with: npx docker-mcp-server --help\n'"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "commander": "^12.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "docker": ">=20.0.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ]
}